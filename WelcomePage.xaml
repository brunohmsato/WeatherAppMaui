<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.WelcomePage"
             Title="WelcomePage"
             BackgroundColor="#512DA8">

    <StackLayout VerticalOptions="Center"
                 Margin="20"
                 Spacing="0">

        <Image Source="dotnet_bot.png"
               HeightRequest="200"
               WidthRequest="200"/>

        <Label Text="Weather"
               FontSize="40"
               TextColor="#ffca28"/>

        <Label Text="Forecast App"
               FontSize="40"
               TextColor="white"/>

        <Label Text="Um novo app de clima, com várias funcionalidades incluindo o que há nos demais apps."
               FontSize="Small"
               TextColor="white"/>

        <Button Text="Iniciar"
                FontSize="Large"
                BackgroundColor="#ffca28"
                WidthRequest="250"
                Margin="0,50,0,0"
                x:Name="BtnGetStarted"
                Clicked="BtnGetStarted_Clicked"/>

    </StackLayout>
</ContentPage>